@using tess.Infraestrutura


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" , charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="page-header col-xs-12 col-md-12 badge-warning">
                <h1>TESS ASP.NET MVC <small class="text-danger"> Aplicação Modelo</small></h1>
            </div>
            <div style="text-align:right;">
                @{
                    if (Html.GetAuthenticatedUser().ToString() != "")
                    {
                        @Html.GetAuthenticatedUser();
                        @Html.ActionLink(" - Sair", "Logout", "Account", new { area = "Seguranca" }, null);
                    }
                    else
                    {
                        @Html.ActionLink("Acessar", "Login", "Account", new { area = "Seguranca" }, null);
                    }
                }
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-md-3 badge-pill">
                <ul class="buttons-collection">
                    <li id="liHome" role="presentation" class="active"><a href="#">Home</a></li>
                    <li id="liCategorias" role="presentation">@Html.ActionLink("Categorias", "Index", "Categorias", new { area = "Tabelas" }, null)</li>
                    <li id="liFabricantes" role="presentation">@Html.ActionLink("Fabricantes", "Index", "Fabricante", new { area = "Tabelas" }, null)</li>
                    <li id="liProdutos" role="presentation">@Html.ActionLink("Produtos", "Index", "Produtos", new { area = "Tabelas" }, null)</li>
                    <li id="liCompras" role="presentation">@Html.ActionLink("Compras", "Index", "Compras", new { area = "Tabelas" }, null)</li>
                    <li id="liPessoas" role="presentation">@Html.ActionLink("Pessoas", "Index", "Pessoas", new { area = "Tabelas"}, null)</li>
                    <li id="liUsuarios" role="presentation">@Html.ActionLink("Usuario", "Index", "Admin", new { area = "Seguranca" }, null)</li>
                    <li id="liPapeis" role="presentation">@Html.ActionLink("Papéis", "Index", "PapelAdmin", new { area = "Seguranca" }, null)</li>
                </ul>
            </div>
            <div class="col-xl-9 col-md-9 badge-light">
                <br />
                @RenderBody()
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-xs-12 col-md-12 badge-warning">
                <small>Layout com Bootstrap</small>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/scripts/jquery-3.0.0.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    @RenderSection("ScriptPage", false)
</body>
</html>
